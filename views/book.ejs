    <div class="container" id="contact-page">

        <form action="insert-book" method="POST" id="contact" enctype="text/plain">

            <h1>Insert Book</h1>

            <ul>
                <li>
                    <input placeholder="Name" type="text" name="name" id="name" required>
                    <label class="visually-hidden" for="name">Name</label>
                </li>

                <li>
                    <input placeholder="Author" type="text" name="author" id="author" required>
                    <label class="visually-hidden" for="author">Email</label>
                </li>

                <li>
                    <input placeholder="Published" type="number" name="published" id="published" pattern="^[0-9]{1,4}$" required>
                    <label class="visually-hidden" for="published">Published</label>
                </li>

                <li>
                    <textarea placeholder="Description" type="text" name="description" id="description" required></textarea>
                    <label class="visually-hidden" for="description">Description</label>
                </li>
                 
                <li>
                    <input placeholder="Price" type="number" name="price" id="price" required>
                    <label class="visually-hidden" for="price">Price</label>

                <li>
                    <button type="submit" class="btn" id="form-submit">Submit</button>
                </li>
            </ul>

        </form>

    </div>



    <div class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <h1><%= title %></h1>
                </br>
                <table class="table table-bordered table-striped table-hover">
                    <tr>
                        <th class="text-center">Name</th>
                        <th class="text-center">Author</th>
                        <th class="text-center">Published</th>
                        <th class="text-center">Description</th>
                        <th class="text-center">Price</th>
                    </tr>
                    <% for(let count=0; count < bookList.length; count++) { %>
                        <tr>
                            <td class="text-center"><%= bookList[count].name %></td>
                            <td class="text-center"><%= bookList[count].author %></td>
                            <td class="text-center"><%= bookList[count].published %></td>
                            <td class="text-center"><%= bookList[count].description %></td>
                            <td class="text-center"><%= bookList[count].price %></td>
                        </tr>
                    <% } %>

                </table>
            </div>
        </div>
    </div>
  </div>
</main>
